@model ArticleManager.Models.Article

@{
    ViewData["Title"] = "Full Page";
}

<div class="text-center">
    <h1 class="display-3">@Model.Name</h1>
    <p class="display-6">@Model.Author</p>
    <p class="display-7">@Model.CreatedAt</p>
</div>
<div class="markdown-content">
    <markdown>@Model.ContentMarkdown</markdown>
</div>